--><template xmlns="http://ws.apache.org/ns/synapse" name="addAccount">
    <parameter description=" " name="value1"/>
    <parameter description=" " name="value2"/>
    <sequence>
        <payloadFactory media-type="xml">
            <format>
                <SOAP-ENV:Envelope xmlns:SOAP-ENV="http://schemas.xmlsoap.org/soap/envelope/">
                    <SOAP-ENV:Header>
                        <SessionHeader>
                            <sessionId>$3</sessionId>
                        </SessionHeader>
                    </SOAP-ENV:Header>
                    <SOAP-ENV:Body>
                        <addAccount xmlns="http://soap.sforce.com/schemas/class/ConnectorAutomation">
                            <value1>$1</value1>
                            <value2>$2</value2>
                        </addAccount>
                    </SOAP-ENV:Body>
                </SOAP-ENV:Envelope>
            </format>
            <args>
                <arg expression="$func:value1"/>
                <arg expression="$func:value2"/>
                <arg expression="$ctx:sessionId"/>
            </args>
        </payloadFactory>
        <property name="messageType" scope="axis2" value="text/xml"/>
        <property name="HTTP_METHOD" scope="axis2" value="POST"/>
        <header name="Action" value="''"/>
        <header name="To" value="https://ap2.salesforce.com/services/Soap/class/ConnectorAutomation"/>
        <call>
            <endpoint>
                <default format="soap11"/>
            </endpoint>
        </call>
    </sequence>
</template>
